alert("좋아요가 설정되었습니다.");

var like_count = parseInt($('.like-count').text());

//좋아요가 취소된 경우
// 좋아요 취소버튼 -> 좋아요 버튼으로
if(<%=@like.frozen? %>) {
    like_count = like_count  - 1;
    $('.like').html(`좋아요(<span class='like-count'>${like_count}</span>)`).removeClass("btn-warning text-white").addClass("btn-info");
} else{
//좋아요가 새로 눌린 경우
//좋아요 버튼 -> 좋아요 취소버튼으로
    like_count = like_count  + 1;
    $('.like').html(`좋아요 취소(<span class='like-count'>${like_count}</span>)`).removeClass("btn-info").addClass("btn-warning text-white");
}